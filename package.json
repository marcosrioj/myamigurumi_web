    "eslint": "9.5.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "style-dictionary": "4.1.1",
    "ts-jest": "29.2.5",
    "typescript": "5.9.1"
  }
}
